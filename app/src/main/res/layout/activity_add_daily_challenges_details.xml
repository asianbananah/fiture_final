<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Challenge Name: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/challengeName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text=""
                android:background="@drawable/bordered_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <EditText
                    android:id="@+id/challengeDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=""
                    android:background="@drawable/bordered_background"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Track:"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/track"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:entries="@array/challengeTrackValue"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Goal Num: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <EditText
                    android:id="@+id/challengeGoalNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:inputType="number"
                    android:hint="minute/s"
                    android:background="@drawable/bordered_background"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Points: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <EditText
                    android:id="@+id/pointsTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:inputType="number"
                    android:background="@drawable/bordered_background"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Difficulty: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/difficulty"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:entries="@array/Difficulty"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2980b9"
                android:layout_gravity="center_vertical"
                android:alpha="0.8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fitness Goal: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_background"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/fitnessGoal"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:entries="@array/type"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textColor="@android:color/white"
        android:background="#2980b9"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
