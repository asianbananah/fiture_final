<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lim.fiture.fiture.fragments.UserProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programs picked for you"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:alpha="0.5"
                android:background="@android:color/black" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommendedProgramsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/allExercisesLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loseLbl"
            android:layout_alignStart="@+id/loseLbl"
            android:layout_below="@+id/recommendedProgramsRecycler"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Programs By Goal"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:alpha="0.5"
                android:background="@android:color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/loseLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allExercisesLbl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Lose:"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/loseRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loseLbl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.3"
            android:background="@android:color/black"
            android:layout_below="@+id/loseRecycler"/>

        <TextView
            android:id="@+id/gainLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Gain:"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gainRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gainLbl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.3"
            android:background="@android:color/black"
            android:layout_below="@+id/gainRecycler"/>

        <TextView
            android:id="@+id/maintainLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Maintain:"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/maintainRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintainLbl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>