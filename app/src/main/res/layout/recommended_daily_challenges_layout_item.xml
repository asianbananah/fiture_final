<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardy"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/dailyChallengeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fiture_icon"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <Button
            android:id="@+id/addDailyChallengeButton"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="115dp"
            android:text="Add Daily Challenge"
            android:background="@color/color"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/challengeName"
        android:layout_below="@+id/cardy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardy"
        android:layout_alignLeft="@+id/cardy"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Challenge Name"/>

    <TextView
        android:id="@+id/durationTxt"
        android:layout_below="@+id/challengeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardy"
        android:layout_alignLeft="@+id/cardy"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        tools:text="60"/>


</RelativeLayout>