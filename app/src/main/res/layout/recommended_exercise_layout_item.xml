    <android.support.v7.widget.CardView
        android:id="@+id/cardy"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fiture_icon"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/exerciseName"
        android:layout_below="@+id/cardy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardy"
        android:layout_alignLeft="@+id/cardy"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Moymoy kabog"/>

    <TextView
        android:id="@+id/exerciseType"
        android:layout_below="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardy"
        android:layout_alignLeft="@+id/cardy"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        tools:text="Lose"/>

